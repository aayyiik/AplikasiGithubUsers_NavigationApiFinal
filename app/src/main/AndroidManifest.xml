<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.submission.picodiploma.aplikasigithubusers_navigationapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiGithubUsers_NavigationApi"
        tools:targetApi="31">
        <activity
            android:name=".activity.SwitchThemeActivity"
            android:exported="false"
            android:label="@string/theme_swicth" />
        <activity
            android:name=".activity.UserFavoriteActivity"
            android:exported="false"
            android:label="@string/Favorite_user" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AplikasiGithubUsers_NavigationApi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetailUserActivity"
            android:exported="false"
            android:label="@string/Detail_User" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:label="@string/List_User" />
    </application>

</manifest>